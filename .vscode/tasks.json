{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-o",
				"${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"problemMatcher": []
		},
		{
			"label": "run",
			"type": "shell",
			"command": "g++ -o ${fileBasenameNoExtension}.exe '${file}';clear;./${fileBasenameNoExtension}.exe; Remove-Item ${fileBasenameNoExtension}.exe",
			"group":{
				"kind": "build",
				"isDefault": true
			}
		}
	]
}